{
  "name": "@gilder/backend-services",
  "private": true,
  "description": "",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/**",
      "services/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "bootstrap": "yarn build:libs",
