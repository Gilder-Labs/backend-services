    "@nestjs/cli": "^9.1.3",
    "cross-env": "^7.0.3",
    "pm2": "^5.2.0",
    "turbo": "^1.5.3",
    "typescript": "^4.8.3",
    "vite": "^3.1.3"
  },
  "packageManager": "yarn@3.2.3"
}
