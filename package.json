{
  "name": "@gilder/backend-services",
  "private": true,
  "description": "",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "libs/**",
      "services/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "build:libs": "turbo run --filter=\"./libs/**\" build",
    "watch:libs": "pnpm --parallel --filter \"./libs/**\" watch",
    "watch:monitor-service": "yarn workspace @gilder/monitor-service dev",
    "watch:notify-service": "yarn workspace @gilder/notify-service dev",
    "watch:graphql-service": "yarn workspace @gilder/graphql-service dev",
    "dev": "concurrently -c \"bgGreen.bold,bgMagenta.bold,bgBlue.bold,bgCyan.bold\" \"yarn:watch:*\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.4",
    "@nestjs/cli": "^9.1.3",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "turbo": "^1.5.5",
    "typescript": "^4.8.4",
    "vite": "^3.1.4",
    "zx": "^7.0.8"
  },
  "resolutions": {
    "rollup": "2.78.1"
  },
  "packageManager": "yarn@3.2.3"
}
